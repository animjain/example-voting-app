pipeline {
    agent any
    
    tools{
        maven "maven 3.6.1"
    }
    
    stages {
        stage('Files in this directory') {
            steps {
                sh "ls -ltr"
            }
        }
        stage('Current working directory') {
            steps {
                pwd()
            }
        }
        stage("build"){
            steps {
                echo "Changind pwd"
                dir("worker"){
                    sh 'ls -ltr'
                    sh 'mvn compile'
                }
            }
        }
        stage('Final') {
            steps {
                pwd()
            }
        }
    }
}
